        <item name="profile_screen_bg">#f8fafd</item>       <!-- specific: profile screen -->
        <item name="search_background">#E8E7EF</item>       <!-- search bar background -->
        <item name="outer_box_background">#EBEBF7</item>    <!-- outer box in profile dialog -->
