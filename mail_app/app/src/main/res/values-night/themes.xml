<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Mail_app" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- ═══════ BACKGROUNDS ═══════ -->
        <item name="color_background">#121318</item>         <!-- screen background -->
        <item name="colorSurface">#131314</item>             <!-- cards, surfaces -->
        <item name="profile_screen_bg">#1B1B1B</item>        <!-- specific: profile screen -->
        <item name="search_background">#282A2F</item>        <!-- search bar background -->
        <item name="outer_box_background">#1E1F25</item>     <!-- outer box in profile dialog -->
        <item name="inner_box_background">#0D0E13</item>     <!-- inner box in profile dialog -->
        <item name="menu_item_bg">#1F212B</item>             <!-- sidebar menu item background -->
        <item name="menu_item_select_bg">#414659</item>      <!-- selected sidebar menu item background -->

        <!-- ═══════ TEXT COLORS ═══════ -->
        <item name="text_color">#FEFEFE</item>               <!-- main text -->
        <item name="colorSecondary">#BBBBBB</item>           <!-- secondary text -->
        <item name="color_label">#E8EAED</item>              <!-- label text -->
        <item name="text_color_hint">#C0C1CB</item>          <!-- hint text -->
        <item name="dialog_profile_text">#E3E2E9</item>      <!-- text/icons in profile dialog -->

        <!-- ═══════ DIVIDERS / BORDERS ═══════ -->
        <item name="dividerColor">#444444</item>             <!-- profile info divider -->
        <item name="search_divider_color">#3E4045</item>     <!-- search divider -->
        <item name="divider_gray">#333333</item>

        <!-- ═══════ BUTTONS & ACTIONS ═══════ -->
        <item name="profile_action_bg">#004A77</item>        <!-- button background -->
        <item name="profile_action_color">#E3E3E3</item>     <!-- button text/icon -->

        <!-- ═══════ ICONS ═══════ -->
        <item name="icon_color">#E2E2E9</item>               <!-- color for main icons -->
        <item name="gray_icon">#B0B0B0</item>

        <!-- ═══════ PRIMARY COLOR ═══════ -->
        <item name="colorPrimary">@color/input_outline</item> <!-- primary app color -->

        <!-- ═══════ COMPOSE BUTTON COLORS ═══════ -->
        <item name="compose_button_background">#4A4A55</item> <!-- background of the 'compose' button -->
        <item name="compose_button_text">#FFFFFF</item>       <!-- text/icon color of the 'compose' button -->

        <!-- ═══════ FAB (FLOATING ACTION BUTTON) ═══════ -->
        <item name="fab_background">#333333</item>           <!-- floating action button background -->
        <item name="fab_icon_tint">#FFFFFF</item>            <!-- floating action button icon tint -->

    </style>
</resources>
